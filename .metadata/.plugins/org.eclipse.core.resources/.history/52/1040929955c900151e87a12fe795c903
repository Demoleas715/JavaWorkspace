package u6.ex;

import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;

public class Ex4_9 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner input = new Scanner(System.in);
		System.out.println("Enter the number of students");
		int num = input.nextInt();
		double highScore = 0;
		double secondHighScore = 0;
		String studentHighScore = "";
		String studentSecondHighScore = "";
		List scores = new ArrayList();
		for (num = num; num > 0; num -= 1) {
			System.out.println("Enter the student's name");
			input.nextLine();
			String name = input.nextLine();
			System.out.println("Enter " + name + "'s score");
			double score = input.nextDouble();
			scores.add(score);
			if (score > highScore) {
				highScore = score;
				studentHighScore = name;
			}
		}
		System.out.println("\nStudent with the highest score: " + studentHighScore + "\nScore: " + highScore);
		System.out.println(
				"\nStudent with the second highest score: " + studentSecondHighScore + "\nScore: " + secondHighScore);
	}
}